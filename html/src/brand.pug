//- Используем стандартный шаблон Project
extends ./template/base_layout

block variables
    - var file_name = 'brand'

//- Модифицируем head
block head
    - var pageTitle = 'American Tourister';

//- Выводим попапы
block popup
    //- ПопАпчики
    include section/ui-kit/popup.pug
    +popup()(data-popup='filter-mobile').--full
        include section/filter-mobile.pug
        +filter-mobile()

//- Выводим content
