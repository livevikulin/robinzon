        include section/ui-kit/breadcrumbs.pug
        +breadcrumbs('Главная', 'Бренды', 'American Tourister').--catalog
        include section/ui-kit/title.pug
        +title('h1', 'American Tourister').--brand


    +b('section').section.--white.--brand
        .b-container
            //- American Tourister
            include section/brand-card.pug
            +brand-card()

            include section/ui-kit/hr.pug
            +hr().--none

            //- Коллекции бренда
            include section/brand-recommend.pug
            +brand-recommend()

    .b-container
