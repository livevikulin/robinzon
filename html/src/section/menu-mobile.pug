mixin menu-mobile()
    +b.menu-mobile.js-menu-mobile.js-step-mobile
        +e.close.js-close-mobile-menu
            +icon('close-bold').--mobile-menu
        +e.item.--mobile-show.--city Город:
            |
            |
            +e('span').name-city.js-name-city-mobile.js-open-step-mobile
            +b.menu-mobile.--next-step.--half-scroll.js-step-mobile.js-city-selection-move-mobile
                +e.item
                    +e('a')(href="javascript:void(0);" title="Назад").back-link.js-back-submenu
                        include ui-kit/icon.pug
                        +icon('arrow-small').--mobile-back-step
