//- Используем стандартный шаблон Project
extends ./template/base_layout

block variables
    - var file_name = 'compare'

//- Модифицируем head
block head
    - var pageTitle = 'Сравнение товаров';

//- Выводим попапы
block popup

//- Выводим фикседы
block preHeader
    //- include section/fixed-tab-product.pug
    //- +fixed-tab-product().js-fixed-tab-product
    include section/compare.pug
    +compare--fixed()

//- Выводим content
block content
    .b-container
        include section/ui-kit/breadcrumbs.pug
        +breadcrumbs('Главная', 'Сравнение').--catalog
        include section/ui-kit/title.pug
        +title('h1', 'Сравниваем товары').--page-head
        include section/ui-kit/checkbox.pug
        +checkbox( 'compare-show', 'id-compare-show', 'Показывать только различия', 'js-class' ).--compare

    //- Сравнение
    include section/compare.pug
    +compare()